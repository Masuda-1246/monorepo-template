{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "noEmit": true,
    "composite": false,
    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"],
      "@repo/ui": ["../../packages/ui/dist/index.d.ts"],
      "@repo/core": ["../../packages/core/dist/index.d.ts"],
      "@repo/spec": ["../../packages/spec/generated/client/index.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
